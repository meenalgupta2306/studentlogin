extends base.pug
block style 
    style 
        include ../static/student.css
        include ../static/studentview.css

block content
    article#studentinfo
      div(id="modalOne" class="modal" )
          div(class="modal-content")
              div(class="contact-form")
                form(name="myform" class="form" )
                    input(class="fname" type="text" name="name" placeholder="Name" id="name")
                    input(type="number" name="age" placeholder="Age" id="age")
                    select(name="school" placeholder="School")
                      option(value="" disabled selected) School
                      option(value="LEAD School Karmala") LEAD School Karmala
                      option(value="St. Thomas School") St. Thomas School 
                      option(value="Loyola High School") Loyola High School
                    select(name="class" placeholder="Class")
                      option(value="" disabled selected) Class
                      option(value="1") 1
                      option(value="2") 2
                      option(value="3") 3
                      option(value="4") 4
                      option(value="5") 5
                    select(name="division" placeholder="Class")
                      option(value="" disabled selected) Division
                      option(value="A") A
                      option(value="B") B
                      option(value="C") C
                      option(value="D") D
                      option(value="E") E
                    
                    button(type="submit" onclick="confirmOkay()" id="search") Search

      

          section#studentTable 
            div#table.ex1
              table#studentTable 
                thread 
                  tr.tr 
                    th.th ID^v 
                    th.th Name 
                    th.th Age 
                    th.th School 
                    th.th Class^v 
                    th.th Division
                    th.th Status
                    th.th




    script(src="/static/table.js")
    script(src="/static/student.js")